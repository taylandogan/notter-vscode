{
  "name": "notter-vscode",
  "displayName": "Notter",
  "description": "VSCode plugin for Notter",
  "keyword": [
    "todo",
    "comment",
    "notter",
    "task"
  ],
  "version": "0.2.1",
  "publisher": "taylan",
  "homepage": "https://github.com/taylandogan/notter-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/taylandogan/notter-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/taylandogan/notter-vscode/issues",
    "email": "taylandogan.nl@gmail.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notter-explorer",
          "title": "Notter",
          "icon": "$(pass)"
        }
      ]
    },
    "views": {
      "notter-explorer": [
        {
          "type": "webview",
          "id": "notterTreeView",
          "name": "Discovered Comments"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notter-explorer",
        "contents": "In order to use Notter, please initialize a Notter instance first. \n[Init Notter](command:notter.init)"
      }
    ],
    "commands": [
      {
        "command": "notter.version",
        "title": "Notter: Version Check"
      },
      {
        "command": "notter.discover",
        "title": "Notter: Discover Comments"
      },
      {
        "command": "notter.init",
        "title": "Notter: Initialize Notter Instance"
      }
    ],
    "configuration": {
      "title": "Notter",
      "properties": {
        "notter.projectSourceFolder": {
          "type": "string",
          "default": "",
          "description": "The folder where the project source code is located"
        },
        "notter.username": {
          "type": "string",
          "default": "",
          "description": "Username to be used for Notter"
        },
        "notter.email": {
          "type": "string",
          "default": "",
          "description": "Email to be used for Notter"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
