{
  "name": "notter-vscode",
  "displayName": "Notter",
  "description": "VSCode plugin for Notter",
  "icon": "media/notter.png",
  "keyword": [
    "todo",
    "comment",
    "notter",
    "task"
  ],
  "version": "0.4.1",
  "publisher": "taylan",
  "homepage": "https://github.com/taylandogan/notter-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/taylandogan/notter-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/taylandogan/notter-vscode/issues",
    "email": "taylandogan.nl@gmail.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notter-explorer",
          "title": "Notter",
          "icon": "$(pass)"
        }
      ]
    },
    "views": {
      "notter-explorer": [
        {
          "type": "webview",
          "id": "notterTreeView",
          "name": "Discovered Comments"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "notter.clearSearchInput",
          "when": "false"
        },
        {
          "command": "notter.discoverFile",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "notter.clearSearchInput",
          "when": "view =~ /notter/",
          "group": "navigation@6"
        },
        {
          "command": "notter.expand",
          "when": "view =~ /notter/",
          "group": "navigation@7"
        },
        {
          "command": "notter.collapse",
          "when": "view =~ /notter/",
          "group": "navigation@8"
        },
        {
          "command": "notter.export",
          "when": "view =~ /notter/",
          "group": "navigation@9"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notter-explorer",
        "contents": "In order to use Notter, please initialize a Notter instance first. \n[Init Notter](command:notter.init)"
      }
    ],
    "commands": [
      {
        "command": "notter.version",
        "title": "Version Check",
        "category": "Notter"
      },
      {
        "command": "notter.discover",
        "title": "Discover Comments",
        "category": "Notter"
      },
      {
        "command": "notter.discoverFile",
        "title": "Discover Comments in a Single File",
        "category": "Notter"
      },
      {
        "command": "notter.init",
        "title": "Initialize Notter Instance",
        "category": "Notter"
      },
      {
        "command": "notter.clearSearchInput",
        "title": "Clear TODO search input",
        "category": "Notter",
        "icon": "$(clear-all)"
      },
      {
        "command": "notter.expand",
        "title": "Expand TODO tree",
        "category": "Notter",
        "icon": "$(expand-all)"
      },
      {
        "command": "notter.collapse",
        "title": "Collapse TODO tree",
        "category": "Notter",
        "icon": "$(collapse-all)"
      },
      {
        "command": "notter.export",
        "title": "Export all your TODOs",
        "category": "Notter",
        "icon": "$(save)"
      }
    ],
    "configuration": {
      "title": "Notter",
      "properties": {
        "notter.projectSourceFolder": {
          "type": "string",
          "default": "",
          "scope": "workspace",
          "description": "The folder where the project source code is located"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "devicon": "^2.16.0"
  }
}
